<section class="cart-show">
  <header class="page-header">
    <h1>My Cart</h1>
  </header>
  <% if !cart.empty? %>
    <%= render 'cart' %>
  <% else %>
    <div class="empty-cart">
      <h3>Looks like your cart is empty!</h3>
      <%= link_to "Check out some of our hiptastic products", root_path %>
    </div>
  <% end %>
</section>
