<h1>Login</h1>
<% flash.each do |key, value| %>
  <%= content_tag(:div, value, class: "alert alert-#{key}") %>
<% end %>
<%= form_tag '/login' do %>
  <div class="form-group">
    <%= label_tag(:email) %>
    <%= text_field_tag(:email, "", class: 'form-control') %>
  </div>
  <div class="form-group">
    <%= label_tag(:password) %>
    <%= password_field_tag(:password, "" ,class: 'form-control') %>
  </div>
  <%= submit_tag("Login") %>

<% end %>